<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="LauncherTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ToolbarColorBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow"></style>

    <style name="Style_Scrollable">
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="DialogTitle" parent="@style/ShadowedText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ShadowedText">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="DialogButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/btn_dialog</item>
        <item name="android:minHeight">45.0dip</item>
    </style>

    <style name="DialogButton.Left" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_left</item>
    </style>

    <style name="DialogButton.Right" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_right</item>
    </style>

    <style name="DialogButton.Center" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_center</item>
    </style>

    <style name="Theme.Light.FullScreenDialogAct" parent="@style/BaseDialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />

    <style name="Theme_Light_CustomDialog_Blue" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/bg_common_toast</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="style_topbar_textview_shadow">
        <item name="android:shadowColor">#bf000000</item>
        <item name="android:shadowDy">-2.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="FormView">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">@dimen/FormWidth</item>
        <item name="android:background">@drawable/form_bg</item>
    </style>

    <style name="FormInputView">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/size_medium</item>
    </style>

    <style name="NoBorderFormIputView" parent="@style/FormInputView"></style>


    <style name="FormButtonView">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">@dimen/SmallButtonWidth</item>
        <item name="android:layout_height">@dimen/SmallButtonHeight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:background">@drawable/button_bg_selector</item>
    </style>


    <style name="TopBarButton">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">@dimen/top_bar_btn_width</item>
        <item name="android:layout_height">@dimen/top_bar_btn_height</item>
        <item name="android:textSize">@dimen/size_tiny</item>
    </style>
</resources>